<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="353dp"
        android:layout_height="28dp"
        android:text="Give Student ID No *" />

    <EditText
        android:id="@+id/studentId"
        android:layout_width="367dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:hint="i.e.  2005001" />

    <TextView
        android:layout_width="353dp"
        android:layout_height="28dp"
        android:layout_marginTop="123dp"
        android:text="Give Room No *" />

    <EditText
        android:id="@+id/roomNo"
        android:layout_width="367dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="177dp"
        android:hint="i.e.  CSE203/ CSE204/ Outside" />

    <TextView
        android:layout_width="358dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="261dp"
        android:text="Give Time Interval between Tests (optional)" />

    <EditText
        android:id="@+id/timeInterval"
        android:layout_width="367dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="302dp"
        android:hint="write nothing for default value 15 sec" />

    <TextView
        android:layout_width="357dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="392dp"
        android:text="Give Number of Tests (optional)" />

    <EditText
        android:id="@+id/noOfTests"
        android:layout_width="367dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="418dp"
        android:hint="write nothing for default value 20" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="299dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="493dp"
        android:text="Submit" />
</RelativeLayout>
